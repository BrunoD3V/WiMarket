<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:padding="5dip" 
    android:background="@drawable/sdcard_floorplan_grid_item" >
    <!--android:background="@color/translucent_background">-->
 
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout 
        android:id="@+id/GridItem"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip" >
 
        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="100dp"
            android:layout_height="70dp" />
 
    </LinearLayout>
    
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="110dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/grid_item_floorplan_name"
            style="@style/CodeGrid"
            android:textStyle="bold"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/grid_item_floorplan_description_I"
            style="@style/CodeGrid"
            android:textStyle="italic"
            android:textSize="12dip" />
            
        <TextView
            android:id="@+id/grid_item_floorplan_description_II"
            style="@style/CodeGrid"
            android:textStyle="normal"
            android:textSize="10dip" />
            
    </LinearLayout>
 
</RelativeLayout>
